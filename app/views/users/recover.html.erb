<div class="left">
  <div id="authentication">
    <div id="strategies">
      <h2>Recover your Password</h2>
      <%= messages_for request.session.authentication %>
      <form id="strategies-password" method="post" action="/login">
        <%= text_field :name => :username, :label => 'Email or Username:' %>
        <div class="clearSpaceLeft">
          <%= submit 'recover' %>
        </div>
      </form>
    </div>
  </div>
</div>
