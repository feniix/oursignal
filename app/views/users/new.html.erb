<div class="container_12">
  <div class="push_1 grid_5 vcard">
  <h2>Sign Up</h2>

  <%= messages_for @user %>
  <%= messages_for @captcha %>

    <%= form_for @user, :action => '/signup', :method => :post do %>
      <table border="0">
        <tr>
          <td align="right" class="label" width="110px">Username: </td>
          <td width="240px"><%= text_field :username, :class => 'vcard-nickname', :size => '28' %></td>
        </tr>
        <tr>
          <td align="right" class="label">Password: </td>
          <td><%= password_field :password, :value => '', :size => '28' %></td>
        </tr>
        <tr>
          <td align="right" class="label">Your email: </td>
          <td><%= text_field :email, :class => 'vcard-email', :size => '28' %></td>
        </tr>
        <tr>
          <td colspan="2" align="right" class="captcha">
            <%# TODO: Oursignal keys. This is my noodledish one %>
            <script type="text/javascript" src="http://api.recaptcha.net/challenge?k=6Lc1hwcAAAAAAHpTxf1O3AP7QAoEVYF4gl0Blf1q"></script>
            <noscript>
              <iframe src="http://api.recaptcha.net/noscript?k=6Lc1hwcAAAAAAHpTxf1O3AP7QAoEVYF4gl0Blf1q" height="300" width="500" frameborder="0">
              </iframe><br />
              <textarea name="recaptcha_challenge_field" rows="3" cols="40">
              </textarea>
              <input type="hidden" name="recaptcha_response_field" value="manual_challenge">
            </noscript>
          </td>
        </tr>
        <tr>
          <td></td>
          <td align="right"><%= submit :Create %></td>
        </tr>
      </table>
    <% end =%>
  </div><!-- prefix_1 grid_5 -->
</div>
