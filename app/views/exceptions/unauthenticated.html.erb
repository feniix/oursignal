<form class="auth-openid" method="post" action="/login">
  <fieldset>
    <legend>OpenID Provider</legend>
    <%= text_field :name => :openid_url, :label => 'OpenID' %>
    <%= submit 'login' %>
  </fieldset>
</form>

<form class="auth-user" method="post" action="/login">
  <fieldset>
    <legend>Login</legend>
    <%= text_field :name => :username, :label => 'Username' %>
    <%= password_field :name => :password, :label => 'Password' %>
    <%= submit 'login' %>
  </fieldset>
</form>

