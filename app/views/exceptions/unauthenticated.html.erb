<div class="left">
  <div id="authentication">
    <div id="strategies">
      <h2>Log In</h2>
      <%= messages_for request.session.authentication %>
      <form id="strategies-password" method="post" action="/login">
        <%= text_field :name => :username, :label => 'Username:' %>
        <div class="clearSpace"></div>
        <%= password_field :name => :password, :label => 'Password:' %>
        <div class="clearSpaceLeft">
          <div class="lostPassword"><%= link_to 'lost ye password?', url(:new_password) %></div>
          <%= submit 'login' %>
        </div>
      </form>
    </div>
  </div>
  <style type="text/css">
  h3 a:link { text-decoration: none; }
  </style>
  <!--<h3>Register or log in to create your own, personalized Oursignal.</h3>-->
  <h3><%= link_to '..or Sign Up here!', url(:signup) %></h3>
</div>
