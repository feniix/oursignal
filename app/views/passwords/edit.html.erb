<div class="container_12">
  <div class="push_1 grid_5">
    <h2>New password</h2>
    <%= messages_for @user %>
    <%= form_for @user, :action => url(:password, @user.username) do -%>
      <%= hidden_field :password_reset %>
      <table border="0">
        <tr>
          <td align="right" class="label" width="110px">Username: </td>
          <td width="240px"><%= text_field :username, :readonly => 'readonly', :size => '28' %></td>
        </tr>
        <tr>
          <td align="right" class="label" width="110px">Password: </td>
          <td width="240px"><%= password_field :password, :value => '', :size => '28' %></td>
        </tr>
        <tr>
          <td></td>
          <td align="right"><%= submit 'save' %></td>
        </tr>
      </table>
    <% end =%>
  </div>
</div>
