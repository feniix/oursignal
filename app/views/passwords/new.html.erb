<div class="container_12">
  <div class="push_1 grid_5">
    <h2>Recover your Password</h2>
    <%= messages_for message %>
    <%= form_for User.new, :action => url(:passwords) do =%>
      <table border="0">
        <tr>
          <td align="right" class="label" width="110px">Username: </td>
          <td width="240px"><%= text_field :name => :username, :size => '28' %></td>
        </tr>
        <tr>
          <td colspan="2"></td>
        </tr>
        <tr>
          <td></td>
          <td align="right"><%= submit 'recover' %></td>
        </tr>
      </table>
    <% end =%>
  </div><!-- prefix_1 grid_5 -->
</div>
