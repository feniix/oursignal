#!/usr/bin/env ruby
require_relative '../lib/oursignal/cli'
require 'oursignal/score/native'

bin     = Oursignal::Cli.bin
option  = (ARGV.shift || 'help').strip
usage   = %Q{
  usage: #{bin} [-h|--help]

  Commands are:
    -h, --help  This help message.
    native      Schedule native feed score updates.
}.strip

case option
  when /^\-{0,2}h(?:elp)?$/, nil then puts usage
  when 'native'                  then Oursignal::Score::Native.read
  else warn("#{bin}: '#{option}' is not an #{bin} option. See '#{bin} --help'.") && exit(-1)
end

