#!/usr/bin/env ruby
require_relative '../lib/oursignal/cli'
require 'resque'

bin     = Oursignal::Cli.bin
option  = (ARGV.shift || 'help').strip
usage   = %Q{
  usage: #{bin} [-h|--help]

  Commands are:
    -h, --help  This help message.
    read        Schedule native feed score updates.
    timestep    Do a timestep.
}.strip

case option
  when /^\-{0,2}h(?:elp)?$/, nil then puts usage
  when 'timestep'                then Resque::Job.create :timestep, 'Oursignal::Job::Timestep'
  when 'read'                    then Resque::Job.create :score, 'Oursignal::Job::Score'
  else warn("#{bin}: '#{option}' is not an #{bin} option. See '#{bin} --help'.") && exit(-1)
end

